generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  username      String   @unique
  email         String   @unique
  password      String
  profile_image String
  created_at    DateTime
  isAdmin       Boolean
  group         Group?
  member        Member?
  posts         Post[]
}

model Group {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime
  imgGroup   String
  groupCode  Int      @unique @default(autoincrement())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])
  members    Member[]
  murais     Mural[]
}

model Mural {
  name       String
  category   String
  created_at DateTime
  imgMural   String
  groupId    String
  id         Int      @id @default(autoincrement())
  group      Group    @relation(fields: [groupId], references: [id])
  posts      Post[]
}

model Member {
  id         String   @id @default(uuid())
  category   String
  created_at DateTime
  userId     String   
  groupId    String
  group      Group    @relation(fields: [groupId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Post {
  id         String   @id @default(uuid())
  content    String
  media      String[]
  created_at DateTime
  muralId    Int
  memberId   String
  member     User     @relation(fields: [memberId], references: [id])
  mural      Mural    @relation(fields: [muralId], references: [id])
}
