generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  username String @unique
  email String @unique
  password String
  profile_image String
  isAdmin Boolean
  created_at DateTime
  member Member?
  group Group?
  posts Post[]
}

model Group {
  id String @id @default(uuid())
  name String
  groupCode Int @unique @default(autoincrement())
  created_at DateTime
  userId String @unique
  user User @relation(fields: [userId], references: [id])
  murais Mural[]
  members Member[]
}

model Mural {
  id Int @id @default(autoincrement())
  name String
  category String
  created_at DateTime
  groupId String
  group Group @relation(fields: [groupId], references: [id])
  posts Post[]
}

model Member {
  id String @id @default(uuid())
  category String
  created_at DateTime
  userId String @unique
  user User @relation(fields: [userId], references: [id])
  groupId String
  group Group @relation(fields: [groupId], references: [id])
}

model Post {
  id String @id @default(uuid())
  content String
  media String[]
  created_at DateTime
  userId String
  user User @relation(fields: [userId], references: [id])
  muralId Int
  mural Mural @relation(fields: [muralId], references: [id])
}